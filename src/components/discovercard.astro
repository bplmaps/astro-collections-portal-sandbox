---
import Card from "@components/card.astro"
import Link from "@components/ui/link.astro"

const { item } = Astro.props;
const options = { weekday: 'long', year: 'numeric', month: 'short', day: 'numeric' };
const date_fmt = (item.data.publishDate) ? item.data.publishDate.toLocaleDateString('en-us', options) : undefined;
---

<Card>
<div class="p-4">
  <div class="mb-8">
    <div class="text-gray-900 font-bold text-xl mb-2">
      <a href=`${item.collection}/${item.slug}` style="muted">{item.data.title}</a>
    </div>
  </div>
  <div class="flex items-center">
    <div class="text-sm">
      {item.data.author && <p class="text-gray-900 leading-none">{item.data.author}</p>}
      {date_fmt && <p class="text-gray-600">{date_fmt}</p>}
    </div>
  </div>
</div>
</Card>
  