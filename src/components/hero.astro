---
import { Picture } from "@astrojs/image/components";
import { arrayOutputType } from "astro/zod";

export interface Props {
  title: string;
  heroText: string;
  splashText: string;
  headerImage: Object;
}

const { title, heroText, splashText, headerImage } = Astro.props;
---

<div class="relative isolate overflow-hidden bg-gray-900 px-6 py-24 sm:py-32 lg:px-8 mb-8">
  <img src={headerImage.src} alt={headerImage.altText} class="absolute inset-0 -z-10 h-full w-full object-cover brightness-50">

  <div class="mx-auto max-w-2xl text-left">
    <h2 class="text-4xl font-bold tracking-tight text-white sm:text-6xl font-serif">{splashText}</h2>
    <p class="mt-6 text-2xl leading-8 text-orange-300">{heroText}</p>
  </div>
</div>