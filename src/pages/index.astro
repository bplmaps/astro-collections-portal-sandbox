---
import Container from "@components/container.astro";
import DiscoverGrid from "@components/discovergrid.astro";
import CollectionGrid from "@components/collectiongrid.astro";
import Hero from "@components/hero.astro";
import SectionHead from "@components/sectionhead.astro";
import Layout from "@layouts/Layout.astro";

import data from "instance.json";
---

<Layout title={data.projectTitle}>
  <Container>
    <Hero 
      title={data.projectTitle} 
      heroText={data.projectDescription}
      />
    <SectionHead text="Discover Stories"/>
    <DiscoverGrid />
    <SectionHead text="Explore Collections"/>
    <CollectionGrid />
  </Container>
</Layout>


<style is:global>
    @import url("https://use.typekit.net/bkx8omi.css");
</style>